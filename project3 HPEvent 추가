import javax.swing.JTextField;

public class HPEvent {
	

//	labelImage / dataPanel / recordPanel
	
	HPGUI hpGUI;

    public HPEvent(HPGUI hpGUI) {
        this.hpGUI = hpGUI;
    }

    public void event() {

        hpGUI.btnList.get(0).jButton.addActionListener(new ActionListener() {
